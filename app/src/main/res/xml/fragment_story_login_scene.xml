<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/logo_dicoding"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="128dp"
            motion:layout_constraintHorizontal_bias="0.0"
            android:scaleX=".5"
            android:alpha="0" />
        <Constraint
            android:id="@+id/myCustomEmailLogin"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            motion:layout_constraintStart_toEndOf="@+id/email_input_icon"
            motion:layout_constraintTop_toBottomOf="@+id/logo_dicoding"
            motion:layout_constraintHorizontal_bias="1.0"
            android:alpha="0" />
        <Constraint
            android:id="@+id/myCustomPassword"
            motion:layout_constraintEnd_toEndOf="@+id/myCustomEmailLogin"
            motion:layout_constraintStart_toEndOf="@+id/password_input_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/myCustomEmailLogin"
            android:layout_marginTop="16dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/email_input_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            motion:layout_constraintTop_toBottomOf="@+id/logo_dicoding"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/password_input_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            motion:layout_constraintTop_toBottomOf="@+id/email_input_icon"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/logo_dicoding"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/myCustomEmailLogin"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            motion:layout_constraintStart_toEndOf="@+id/email_input_icon"
            motion:layout_constraintTop_toBottomOf="@+id/logo_dicoding"
            motion:layout_constraintHorizontal_bias="1.0" />
        <Constraint
            android:id="@+id/myCustomPassword"
            motion:layout_constraintEnd_toEndOf="@+id/myCustomEmailLogin"
            motion:layout_constraintStart_toEndOf="@+id/password_input_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/myCustomEmailLogin"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/email_input_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            motion:layout_constraintTop_toBottomOf="@+id/logo_dicoding"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" />
        <Constraint
            android:id="@+id/password_input_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            motion:layout_constraintTop_toBottomOf="@+id/email_input_icon"
            android:layout_marginStart="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" />
    </ConstraintSet>
</MotionScene>