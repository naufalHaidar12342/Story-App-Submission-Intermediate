<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/storyLoginFragment">
    <fragment
        android:id="@+id/storyLoginFragment"
        android:name="xyz.heydarrn.storyappdicoding.StoryLoginFragment"
        android:label="fragment_story_login"
        tools:layout="@layout/fragment_story_login" >
        <action
            android:id="@+id/action_storyLoginFragment_to_storyRegisterFragment"
            app:destination="@id/storyRegisterFragment" />
    </fragment>
    <fragment
        android:id="@+id/storyRegisterFragment"
        android:name="xyz.heydarrn.storyappdicoding.StoryRegisterFragment"
        android:label="fragment_story_register"
        tools:layout="@layout/fragment_story_register" >
        <action
            android:id="@+id/action_storyRegisterFragment_to_storyLoginFragment"
            app:destination="@id/storyLoginFragment" />
    </fragment>
</navigation>